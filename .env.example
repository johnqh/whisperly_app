# =============================================================================
# Whisperly App Environment Variables
# =============================================================================
# Copy this file to .env and fill in your values.
# =============================================================================

# =============================================================================
# Branding (Optional - defaults shown)
# =============================================================================
# App name displayed throughout the UI
VITE_APP_NAME=Whisperly

# Domain used for links and display
VITE_APP_DOMAIN=whisperly.io

# Company name for legal/footer
VITE_COMPANY_NAME=Sudobility

# Support email address
VITE_SUPPORT_EMAIL=support@whisperly.io

# =============================================================================
# API Configuration
# =============================================================================
VITE_API_BASE_URL=http://localhost:3001

# =============================================================================
# Firebase Configuration (Required)
# =============================================================================
VITE_FIREBASE_API_KEY=your-api-key
VITE_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your-project
VITE_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your-sender-id
VITE_FIREBASE_APP_ID=your-app-id
VITE_FIREBASE_MEASUREMENT_ID=your-measurement-id

# RevenueCat
VITE_REVENUECAT_OFFER_ID=api

# =============================================================================
# Feature Flags
# =============================================================================

# Meet with Founder Button URL
# URL for scheduling meetings with the founder (e.g., Calendly link)
# When set, shows a "Talk to Founder" button in the breadcrumbs bar
# Leave empty to hide the button
# Example: https://calendly.com/founder/30min
VITE_MEET_FOUNDER_URL=

# Enable development/sandbox mode (shows test data indicators)
VITE_DEV_MODE=false

# =============================================================================
# Social Links (Optional)
# =============================================================================
# Full URLs for social media links in footer/about pages
VITE_TWITTER_URL=
VITE_REDDIT_URL=
VITE_DISCORD_URL=
VITE_LINKEDIN_URL=
VITE_FARCASTER_URL=
VITE_TELEGRAM_URL=
VITE_GITHUB_URL=

# Handles (without @ or full URL) for display
VITE_TWITTER_HANDLE=
VITE_DISCORD_INVITE=
VITE_LINKEDIN_COMPANY=
VITE_GITHUB_ORG=

# =============================================================================
# Status Page (Optional)
# =============================================================================
# External status page URL (e.g., Statuspage.io, Betteruptime)
VITE_STATUS_PAGE_URL=
VITE_STATUS_PAGE_API_URL=
